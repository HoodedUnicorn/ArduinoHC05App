{
  "name": "@hoodedunicorn/arduinohc05app",
  "version": "0.1.14",
  "author": "hoodedunicorn",
  "homepage": "https://github.com/hoodedunicorn/arduinohc05app",
  "main": "commitlint.config.js",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "cypress": "^7.1.0",
    "husky": "^8.0.3",
    "standard-version": "^9.5.0"
  },
  "scripts": {
    "test": "jest",
    "e2e": "cypress run",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hoodedunicorn/ArduinoHC05App.git"
  },
  "publishConfig": {
    "@hoodedunicorn:registry": "https://npm.pgk.github.com/"
  },
  "dependencies": {
    "@hoodedunicorn/arduinohc05app": "github:hoodedunicorn/arduinohc05app",
    "release-please": "^15.3.0",
    "release-it": "^15.1.1"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "Changelog.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            }
          ]
        }
      }
    }
  },
  "description": "",
  "bugs": {
    "url": "https://github.com/hoodedunicorn/arduinohc05app/issues"
  }

}
